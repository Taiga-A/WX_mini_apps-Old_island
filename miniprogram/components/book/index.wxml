<!--components/book/index.wxml-->
<view bindtap="onTap" class="out">
  <image class="img" src="{{book.image}}" ></image>
  <view class="description">
    <text class="title">{{book.title}}</text>
    <text class="author">{{book.author}}</text>
    <view class="foot">
      <text wx:if="{{book.fav_nums}}" class="footer">{{book.fav_nums + '  喜欢'}}</text>
    </view>
  </view>
</view>

