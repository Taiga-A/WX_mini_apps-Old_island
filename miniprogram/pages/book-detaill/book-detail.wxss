/* miniprogram/pages/book-detaill/book-detail.wxss */
.out {
  background-color: #f5f5f5;
  width: 100%;
}

.head {
  background-color: #fff;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.author {
  font-size: 28rpx;
  color: #999;
}

.head image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.sub-container {
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}

.headline {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #2f2f2f;
}

.comment-out {
  display: flex;
  flex-wrap: wrap;
  padding-left: 20rpx;
  padding-top: 10rpx;
}

.comment-out z-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.num {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}

.content{
  line-height: 46rpx;
  color: #333;
}

.detail-container {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}

.vertical {
  display: flex;
  flex-direction: column;
}

.description {
  color: #999;
  margin-right: 30rpx;
}

.post-out{
  display: flex;
  position: fixed;
  align-items: center;
  height: 100rpx;
  width: 690rpx;
  background-color: #fff;
  box-shadow: 1px -1px 1px #e3e3e3;
  padding: 0 30rpx;
  justify-content: space-between;
  bottom: 0;
}

.post-fake{
  display: flex;
  align-items: center;
  height: 60rpx;
  width: 460rpx;
  border: 1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
  padding-left: 20rpx;
}

.ex-tag1 {
  background-color: #fffbdd !important;
}

.ex-tag2 {
  background-color: #eefbff !important;
}

.like{
  margin-right: 30rpx;
  margin-top: 10rpx;
}

.like-out{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.posting-out{
  bottom: 0;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 100%;
  z-index: 11;
}

.post-head{
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  border-top: 1px solid #f5f5f5;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.cancel{
  color: #666;
}
.post-head text{
  padding: 25rpx;
}
.post-head > text:first-child{
  font-size: 28rpx;
  color: #bbb;
}
.post-out .comment-out{
  width: 690rpx;
  padding: 40rpx 30rpx 0 30rpx;
}
.post {
  width: 690rpx;
  margin: 30rpx auto;
  height: 58rpx;
  background-color: #f5f5f5;
  border-radius: 15px;
  padding-left: 25rpx;
}
.shadow{
  color: #999;
}